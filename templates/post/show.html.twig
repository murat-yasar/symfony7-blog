{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
   <div class="w-full flex items-center justify-between mt-0 px-6 py-2">
      <div class="hidden md:flex md:items-center md:w-auto w-full order-3 md:order-1"></div>
      <div class="order-2 md:order-3 flex flex-wrap items-center justify-end mr-0 md:mr-4">
         <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar mr-1.5 h-3.5 w-3.5 sm:h-4 sm:w-4"><path d="M8 2v4"></path><path d="M16 2v4"></path><rect width="18" height="18" x="3" y="4" rx="2"></rect><path d="M3 10h18"></path></svg>
         <span class="hidden sm:inline">{{ post.date|date('Y-m-d H:i') }}</span>
      </div>
   </div>

   <h2 class="my-6 text-center text-3xl font-bold">{{ post.title }}</h2>

   <div class="m-6 bg-white border border-gray-300 rounded-lg shadow-sm p-6">
      <p class="text-muted-foreground mx-auto mb-12 max-w-3xl text-base sm:text-lg">{{ post.content }}</p>
   </div>

   <div class="m-6 flex justify-end">
      <a href="{{ path('post_edit', {'id': post.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-md transition">Edit</a>
   </div>
{% endblock %}